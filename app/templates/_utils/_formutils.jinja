{% macro render_field(field) %}
{{ field.label(class="block text-gray-700 text-sm font-bold mb-2") }}
{{ field(**kwargs)|safe }}
{% if field.errors %}
{% for error in field.errors %}
<p class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-1">{{ error }}</p>
{% endfor %}
{% endif %}
{% endmacro %}