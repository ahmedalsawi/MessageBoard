{% with messages = get_flashed_messages(with_categories=true) %}
{% if messages %}
{% for catgory, message in messages %}
<div class="bg-{{ catgory }}-100 border border-{{ catgory }}-400 text-{{ catgory }}-700 px-4 py-3 rounded relative"
  role="alert">
  {{ message }}
</div>
{% endfor %}
{% endif %}
{% endwith %}